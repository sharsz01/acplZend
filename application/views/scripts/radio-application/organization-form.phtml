                $('#radioNum').attr('disabled', 'disabled');
                //clearText('#radioNum');
            }
        });

        $('#bNum').click(function () {
            if ($('#bNum').is(':checked')) {
                $('#licBedsNum').removeAttr('disabled');
            }
            else {
                $('#licBedsNum').attr('disabled', 'disabled');
                //clearText('#licBedsNum');
            }
        });

        $('#uNum').click(function () {
            if ($('#uNum').is(':checked')) {
                $('#resUnitsNum').removeAttr('disabled');
            }
            else {
                $('#resUnitsNum').attr('disabled', 'disabled');
                //clearText('#resUnitsNum');
            }
        });

        // enable-disable submit
        $('#agree').click(function () {
            if (!$(this).is(':checked')) {
                $('#submit').attr('disabled', 'disabled');
            }
            else {
                $('#submit').removeAttr('disabled');
            }
        });

        $('#submit').click(function () {
            if (!$('#rNum').is(':checked')) {
                clearText('#radioNum');
            }
            if (!$('#bNum').is(':checked')) {
                clearText('#licBedsNum');
            }
            if (!$('#uNum').is(':checked')) {
                clearText('#resUnitsNum');
            }
        });

