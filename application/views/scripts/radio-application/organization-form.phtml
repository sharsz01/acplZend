            $('#agree').attr('checked', false);
            $('#submit').attr('disabled', 'disabled');
        }

        // Remove text from input field
        function clearText(id) {
            $(id).val('');
        }

        // ================================================ Refactor to function
        $('#rNum').click(function () {
            if ($('#rNum').is(':checked')) {
                $('#radioNum').removeAttr('disabled');
            }
